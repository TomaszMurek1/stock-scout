{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": true,  
    "jsx": "react-jsx", // or "react" for React 16 and below
    "module": "esnext", // Use ES modules for modern JS
    "target": "esnext", // Target modern JavaScript versions
    "esModuleInterop": true,
    "moduleResolution": "node", // Resolve modules using Node-style resolution
    "strict": true, // Optional, but enforces TypeScript strict mode
    "skipLibCheck": true, // Avoids checking type definitions of external libs
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "vite.config.ts", "theme.ts"]
}
